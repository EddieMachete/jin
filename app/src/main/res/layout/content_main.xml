<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ui="http://schemas.android.com/apk/lib/mx.foodstack.ui"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_main_padding"
    android:paddingLeft="@dimen/activity_main_padding"
    android:paddingRight="@dimen/activity_main_padding"
    android:paddingTop="@dimen/activity_main_padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mx.foodstack.jin.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <mx.foodstack.ui.ImageSlider
        android:id="@+id/highlights"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_main_carousel_height"
        ui:showText="true" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_main_padding" />
    <ListView
        android:id="@+id/groups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>
